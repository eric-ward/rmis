
d = read.csv("data/coho/coho_8.txt", stringsAsFactors = FALSE)

d$year = as.numeric(substr(d$recovery_date,1,4))

yrs = unique(d$year)
for(i in 1:length(yrs)) {
  sub = dplyr::filter(d, year == yrs[i])
  write.table(sub, paste0("data/coho/recoveries_", yrs[i],".csv"), sep=",", col.names = T, row.names=F)
}